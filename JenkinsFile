pipeline {
    agent any

    environment {
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'github-token', 
                    url: 'https://github.com/Ansh071200/Devops_CI_CD',
                    branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                    echo 'Building Docker Image'
                    docker build -t anshj07/portfolio_cicd:${BUILD_NUMBER} .
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh '''
                        echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin
                        echo 'Pushing Docker Image to Repo'
                        docker push anshj07/portfolio_cicd:${BUILD_NUMBER}
                        '''
                    }
                }
            }
        }

        stage('Checkout K8S Manifests') {
            steps {
                git credentialsId: 'github-token', 
                    url: 'https://github.com/Ansh071200/Devops_CI_CD/k8s',
                    branch: 'main'
            }
        }

        stage('Update K8S Manifests & Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'github-token', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        sh '''
                        echo 'Updating K8S Manifests'
                        sed -i "s/latest/${BUILD_NUMBER}/g" deploy.yaml
                        git add deploy.yaml
                        git commit -m 'Updated deploy.yaml | Jenkins Pipeline'
                        git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/Ansh071200/Devops_CI_CD/k8s HEAD:main
                        '''
                    }
                }
            }
        }
    }
}
